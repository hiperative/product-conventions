    "**/*.md": ["prettier --write"]
  },
  "devDependencies": {
    "@hiperative/prettier-config": "^1.0.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2"
  }
}
