{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": [
        "*.md",
        "__test__/**",
        "__fixtures__/**",
        "**/*.test.{j|t}s",
        "@(!(package)).json"
      ]
    }
  }
}
